<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <Button
        android:id="@+id/button_checkList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onClickCheckList"
        android:text="Check List" />

    <Button
        android:id="@+id/button_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="onClickCompass"
        android:text="Compass" />

    <Button
        android:id="@+id/button_gyrometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickGyrometer"
        android:text="Gyrometer" />

</LinearLayout>