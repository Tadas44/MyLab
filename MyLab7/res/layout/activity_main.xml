<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp" >

        <Button
            android:id="@+id/button_flexible_static_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flexible Static UI"
            android:onClick="onClickFlexibleStaticUi" />

            <Button
            android:id="@+id/button_flexible_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flexible UI"
            android:onClick="onClickFlexibleUi" />

        <Button
            android:id="@+id/button_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Pager"
            android:onClick="onClickViewPager" />
    </LinearLayout>

</ScrollView>